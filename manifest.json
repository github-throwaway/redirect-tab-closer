{
  "manifest_version": 3,
  "name": "Redirect Tab Closer",
  "description": "This extension automatically closes the launched window for Bluejeans/Zoom/WebEx meetings + Slack URLs.",
  "version": "0.4",
  "icons": {
    "16": "assets/icon-16.png",
    "32": "assets/icon-32.png",
    "48": "assets/icon-48.png",
    "128": "assets/icon-128.png"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "*://zoom.us/postattendee",
        "*://zoom.us/j/*",
        "*://*.zoom.us/j/*",
        "*://zoom.us/s/*",
        "*://*.zoom.us/s/*",
        "*://bluejeans.com/*",
        "*://*.slack.com/archives/*",
        "*://*.webex.com/webappng/sites/*/meeting/info/*",
        "*://*.webex.com/wbxmjs/joinservice/*",
        "*://teams.microsoft.com/dl/launcher/launcher.html*"
      ],
      "js": [
        "content.js"
      ]
    }
  ]
}
